#!/bin/bash
set -e

# require helper
currentDir=$(node -e "console.log(require('path').dirname(require('fs').realpathSync('$BASH_SOURCE')))")
source $currentDir/helper


releaseVersion=$1
masterTag=$2
hasTag=$(git tag -l "$masterTag" | wc -l | tr -d '[:space:]')


# Help messages
if [ "x$1" = "x" ] || [ "x$2" = "x" ]; then
  yellowLog "This script will create a branch based on master or a specific tag."
  yellowLog "Argument 1 (MUST)     : <release-version> to create f.e. 10.0.0"
  yellowLog "Argument 2 (MUST)     : <create branch based on> [master|tag] -> tag is f.e. v2.4.0"
  exit 1
fi


# Does the package.json exist?
if ! [ -f "./package.json" ]; then
    yellowLog 'ERR: You must run the script from the project root.'
    exit 1
fi


# Does the tag exist?
if [[ "$masterTag" != "master" ]] && [[ "$hasTag" != "1" ]]; then
    yellowLog "ERR: The tag $tag does not exist."
    exit 1
fi


# Does the branch to create already exist?
if [ $(git branch -a | grep -w "release-$releaseVersion") ]; then
   yellowLog "ERR: Branch release-$releaseVersion already exists."
   exit 1
fi


# Are there uncommited changes?
hasUncommitedChanges=$(git diff)
if [[ $hasUncommitedChanges ]]; then
    yellowLog "ERR: You have uncommited changes."
    exit 1
fi


yellowLog "Initialize the most recent master branch"
git fetch --all
git checkout master
git reset --hard HEAD
git pull --rebase origin master
git reset --hard origin/master


yellowLog "Create new release version $releaseVersion based on $masterTag"
if [[ "$masterTag" != "master" ]]; then
    git checkout "$masterTag"
fi
git checkout -b "release-$releaseVersion" "$masterTag"
cat package.json | jq ".release=\"$releaseVersion\"" > package.json.tmp
mv package.json.tmp package.json


yellowLog "Update and push package.json to the release branch release-$releaseVersion"
if [ -f "./package.json" ]; then git add package.json; fi
git diff --quiet --exit-code --cached || git commit -am "Updated version to $releaseVersion"
git push origin "release-$releaseVersion"


yellowLog "Delete the local release branch release-$releaseVersion"
git checkout master
git branch -D "release-$releaseVersion"

yellowLog "init-release has been executed successfully"
